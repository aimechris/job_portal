<%= simple_form_for @job_post do |f| %>
  <%= f.input :job_title, label: "Job Post Title" %>
  <%= f.input :posted_by_id, as: :hidden %>
  <%= f.association :job_type %>
  <%= f.input :company %>
  <%= f.input :is_company_name_hidden %>
  <%= f.input :created_date %>
  <%= f.input :job_description, class: "tinymce", label: "Job Description" %>
  <%= f.input :job_location %>
  <%= f.input :is_active %>
  <%= f.association :job_post_activities %>
  <%= f.association :job_post_skill_sets, label: "Job Skill Sets", as: :check_boxes %>
<% end %>
